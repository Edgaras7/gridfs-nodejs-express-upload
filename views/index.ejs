<!DOCTYPE html>
<html>
  <head>
    <title>Upload large files</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style>
        table, td, th {  
          border: 1px solid #ddd;
          text-align: left;}
        table {
          border-collapse: collapse;
          width: 50%;}
        .table-data{
          position: relative;
          left:150px;
          top:100px;}
        th, td {
          padding: 15px;}
        </style>
  </head>
  <body>
 
            <h1>File upload</h1> 
            <form method="POST" action="/upload" enctype="multipart/form-data"> 
                <input type="file" name="file" required>
                <input type="submit" value="Upload">
            </form>
 
        <br><br> 
        
        <table>  
          <tr><th>id</th><th>file name</th><th>file type</th><th>md5</th><th>download</th><th>delete</th></tr>
          <% Object.keys(filelist).forEach(function(key, val) { %> 
          <tr>
            <td><%= filelist[key]['_id'] %></td>
            <td><%= filelist[key]['filename'] %></td>
            <td><%= filelist[key]['contentType'] %></td>
            <td><%= filelist[key]['md5'] %></td> 
            <td><a href="/download/<%= filelist[key]['_id'] %>" target="_blank">download</a></td>
            <td><a href="/delete/<%= filelist[key]['_id'] %>">delete</a></td>
          </tr>
        <% }); %>
        </table>

        
        <br><br>
      
  </body>
</html>
